# ===========================================
# SMS Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# For cloud deployment (Render), set these in the dashboard

# --- Database ---
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/sms_db
# For Neon cloud: postgresql://user:pass@ep-cool-name-123.neon.tech/sms_db

# --- Security ---
SECRET_KEY=your-secret-key-change-in-production
# Generate a strong key: python -c "import secrets; print(secrets.token_urlsafe(64))"

# --- CORS ---
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000
# For cloud: CORS_ORIGINS=https://your-app.vercel.app

# --- Debug ---
DEBUG=true
# Set to false in production

# --- Redis (optional) ---
# Redis is optional - the app works without it
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# --- Email (SMTP) ---
SMTP_SERVER=smtp-mail.outlook.com
SMTP_PORT=587
SENDER_EMAIL=your-email@outlook.com
SENDER_PASSWORD=your-email-password
SMTP_USE_TLS=true

# --- Super Admin ---
# FIRST_SUPERADMIN_EMAIL=admin@example.com
# FIRST_SUPERADMIN_PASSWORD=securepassword
